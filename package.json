{
  "name": "sandbox",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "ci:build": "run-s check test build copycname",
    "copycname": "shx cp .CNAME build/CNAME",
    "build": "svelte-kit build",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "dev": "svelte-kit dev",
    "format": "prettier --ignore-path .gitignore --ignore-path .prettierignore --write --plugin-search-dir=. .",
    "lint": "prettier --ignore-path .gitignore --ignore-path .prettierignore --check --plugin-search-dir=. .",
    "package": "svelte-kit package",
    "preview": "svelte-kit preview",
    "test": "jest"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^6.0.0",
    "@sveltejs/adapter-static": "next",
    "@sveltejs/kit": "next",
    "@types/html-minifier": "^4.0.2",
    "@types/jest": "^27.4.1",
    "autoprefixer": "^10.4.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "html-minifier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.7",
    "prettier": "^2.5.1",
    "prettier-plugin-packagejson": "^2.2.15",
    "prettier-plugin-svelte": "^2.6.0",
    "shx": "^0.3.4",
    "svelte": "^3.44.0",
    "svelte-check": "^2.2.6",
    "svelte-preprocess": "^4.10.1",
    "tailwindcss": "^3.0.23",
    "ts-jest": "^27.1.3",
    "tslib": "^2.3.1",
    "typescript": "~4.5.4"
  }
}
